@model BlogSiteApp.Models.Blog

@{
    ViewBag.Title = "Details";
}

<main role="main" class="container blog-post-detail">
    <div class="row">
        <div class="blog-post-detail-card card col-lg-12">
            <img class="card-img-top" src="~/Content/Images/@Html.Raw(Model.image)" alt="Card image cap">
            <div class="card-body bg-light">
                <strong class="d-inline-block mb-2 text-success">Design</strong>
                <h3 class="card-title">@Html.DisplayFor(model => model.title)</h3>
                <div class="mb-1 text-muted">@Html.DisplayFor(model => model.date)</div>
                @Html.DisplayFor(model => model.content)


                <div class="blog-detail-tag-list">
                    <span class="read-more-heading">Read more: </span>
                    <a class="btn btn-info" href="#" role="button">Tag</a>
                    <a class="btn btn-info" href="#" role="button">Super Extra Long Tag</a>
                    <a class="btn btn-info" href="#" role="button">Extra Long Tag</a>


                </div>
            </div>
        </div>
    </div>
</main>
